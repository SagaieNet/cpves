<h1>Listing domains</h1>

<table border="0" class="domain_view">
    <tr>
        <th>
            Adminid
        </th>
        <th>
            Domainname
        </th>
        <th>
            email addresses
        </th>
        <th>
            forward addresses
        </th>
        <th>
            mailinglist addresses
        </th>
        <th>
            state
        </th>
    </tr>
		<% @domains.each do |domain| %>
		<tr>

        <td>
            <%=h domain.adminid %>
        </td>
        <td>
            <%=h domain.dnsname %>(<%=h domain.dnsname_idn %>)
        </td>
        <td>
            <%=h domain.domain_emails.count %>
        </td>
        <td>
        </td>
        <td>
        </td>
        <td>
            <%=h domain.state %>
        </td>
        <td>
            <%= link_to 'Show', domain %>
        </td>
        <td>
            <%= link_to 'Edit', edit_domain_path(domain) %>
        </td>
        <td>
            <%= link_to 'Destroy', domain, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
    <% end %>
</table>


  
